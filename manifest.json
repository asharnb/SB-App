{
  "name": "StudioBridge",
  "version": "2.0",
  "description": "Assits in folder creation and uploading images",
  "minimum_chrome_version": "37",
  
"icons": { "16": "icons/icon16.png",
           "48": "icons/icon48.png",
          "128": "icons/icon128.png" },
  "app": {
    "background": {
      "scripts": ["background.js","js/socket.js"]
    }
  },
  "permissions": [
    {"fileSystem": ["write", "retainEntries", "directory"]},
    "storage",
    "notifications"
  ],
  "file_handlers": {
    "text": {
      "types": [
          "/*"
      ]
    }
  }  

}
